<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="14dp"
        android:textColor="#494949"
        android:textSize="15sp"
        android:textStyle="bold" />

    <com.greenfrvr.hashtagview.HashtagView
        android:id="@+id/interest_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        app:rowDistribution="middle"
        app:rowGravity="left"
        app:rowMargin="5dp"
        app:rowMode="wrap"
        app:selectionMode="true"
        app:tagBackground="@drawable/selector_interest_board"
        app:tagMargin="4dp"
        app:tagPaddingBottom="3dp"
        app:tagPaddingLeft="8dp"
        app:tagPaddingRight="8dp"
        app:tagPaddingTop="3dp"
        app:tagTextColor="@drawable/selector_interest_text"
        app:tagTextSize="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="5dp"
        android:background="#8e8e8e" />
</LinearLayout>

